@model SignInForm
@{
    ViewData["Title"] = "Sign in to your Account";
}

<section class="signin">
    <div class="container">
        @if (!string.IsNullOrEmpty(ViewData["StatusMessage"]?.ToString()))
        {
            <alert class="alert alert-danger">
                <div class="container">
                    @ViewData["StatusMessage"]
                </div>
            </alert>
        }
        <form method="post" asp-action="SignIn" asp-controller="Auth" asp-route-ReturnUrl="@ViewData["ReturnUrl"]" novalidate>
            <h1>Welcome back</h1>
            <p>Don't have an account yet? <a asp-action="SignUp" asp-controller="Auth">Sign up here</a></p>

            <div class="form-content">
                <div id="email" class="input-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" />
                </div>
                <div id="password" class="input-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" />
                </div>
                <div id="rememberMe" class="checkbox-group">
                    <div class="input-group">
                        <input asp-for="IsPresistent" />
                        <label asp-for="IsPresistent">
                            Remember me
                        </label>
                    </div>
                </div>
                <button id="btn-submit" type="submit" class="btn btn-theme"><i class="fa-regular fa-user"></i>Sign in</button>
            </div>

            <div class="forgot-link">
                <a asp-action="SignUp" asp-controller="Auth">Forgot your password?</a>
            </div>
        </form>

    </div>
</section>